<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepu.dogwiteration1.BreedActivity.BreedListDetails">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/breed_Details_img"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            app:srcCompat="@color/cardview_light_background" />

        <TextView
            android:id="@+id/breed_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/breed_Details_img"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="Christmas cactus"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="32sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/food_detail_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/breed_detail_name"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="houseToxicCommName"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_detail_cost"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="45dp"
            android:text="Toxic Level: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/energy_detail_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_detail_cost"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/textView6"
            android:text="High"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="45dp"
            android:text="Toxic Part: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="45dp"
            android:text="Type: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/house_toxic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groom_detail"
            android:layout_marginBottom="25dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="Blooming House Plant"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <View
            android:id="@+id/house_toxic_divider"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/textView12"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/groom_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/energy_detail_level"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/textView9"
            android:text="Twigs &amp; Foliage"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/house_toxic_divider"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="45dp"
            android:text="Clinical Symptom: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/house_toxic_symptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="The spider plant is considered one of the most adaptable of houseplant and the easiest to grow"
            android:textAppearance="@style/TextAppearance.AppCompat" />


    </RelativeLayout>


</ScrollView>
