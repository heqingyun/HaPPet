<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/wild_toxic_detail_pic"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            app:srcCompat="@color/cardview_light_background" />

        <TextView
            android:id="@+id/wild_toxic_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/wild_toxic_detail_pic"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="Christmas cactus"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="32sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/wild_toxic_common_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/wild_toxic_plant_name"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="houseToxicCommName"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wild_toxic_common_name"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="45dp"
            android:text="Family: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wild_toxic_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wild_toxic_common_name"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/textView6"
            android:text="Cycadaceae"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="45dp"
            android:text="Toxic principles: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <View
            android:id="@+id/wild_toxic_divider"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/wild_toxic_principles"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/wild_toxic_principles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:text="Cycasin, B-methylamino-l-alanine, unidentified neurotoxin (cattle)"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wild_toxic_divider"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="45dp"
            android:text="Clinical Symptom: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wild_toxic_symptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="The spider plant is considered one of the most adaptable of houseplant and the easiest to grow"
            android:textAppearance="@style/TextAppearance.AppCompat" />


    </RelativeLayout>
</ScrollView>