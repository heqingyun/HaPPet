<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepu.dogwiteration1.Home.HomeScreen"
    android:id="@+id/hscreen"
    >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/cust_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/home_default"
        android:layout_alignParentTop="true" />


    <ImageButton
        android:id="@+id/img_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="launchcamera"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_menu_camera"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0.5dp">


        <Button
            android:id="@+id/btnBody_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.7"
            android:layout_gravity="fill"

            android:layout_margin="0.5dp"
            android:background="#89283646"
            android:elevation="0dp"
            android:text="Body Language"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_dogpark_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_margin="0.5dp"
            android:layout_row="1"
            android:background="#89283646"
            android:text="Dog Parks"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_vercare_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_margin="0.5dp"
            android:layout_row="1"
            android:background="#89283646"
            android:text="Vet Care"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_breed_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="0.5dp"
            android:layout_row="0"
            android:background="#89283646"
            android:text="Breed Details"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btnPlant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_margin="0.5dp"
            android:layout_row="1"
            android:background="#89283646"
            android:text="Plant"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_calendar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="0.5dp"
            android:layout_row="0"
            android:background="#89283646"
            android:text="Dog Calendar"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background" />
    </GridLayout>

</RelativeLayout>