<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="1.5dp"
        android:layout_marginBottom="1.5dp"
        card_view:cardElevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/HouseToxicPlantImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/non_toxic_common_name"
                android:layout_marginTop="10dp"
                android:layout_weight="0.09"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/non_toxic_common_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:text="Plant Name"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/houseToxicLevelImage"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/houseToxicLevelImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/HouseToxicPlantImage"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/HouseToxicPlantImage"
                android:layout_toRightOf="@+id/HouseToxicPlantImage"
                android:text="Clinical Signs:"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/HouseToxicclinicalSignsTextView"
                android:layout_alignStart="@+id/HouseToxicclinicalSignsTextView"
                android:layout_below="@+id/HouseToxicclinicalSignsTextView"
                android:layout_marginTop="7dp"
                android:text="Type: "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/HouseToxicclinicalSignsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:text="Can cause vomiting, depression, diarrhea, abdominal pain, hyper-salivation, anorexia, tremors."
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/HouseToxicTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:text="Blooming House Plant"
                android:textAppearance="@style/TextAppearance.AppCompat" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
