<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#8b8b8b">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/firstView"
                android:background="#fff"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView16"
                    android:layout_below="@+id/Birthday"
                    android:layout_marginTop="20dp"
                    android:text="Vaccination Schedule"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="44dp"
                    android:text="Birthday of dog: "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView16"
                    android:layout_alignBottom="@+id/textView16"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:editable="false"
                    android:hint="@string/birthday" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/secondView"
                android:layout_below="@+id/firstView"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/secondView_startDate"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="22/08/2017 -"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/secondView_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secondView_startDate"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="03/10/2017"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Distemper, measles, parainfluenza"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignBaseline="@+id/secondView_startDate"
                    android:layout_alignBottom="@+id/secondView_startDate"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/secondView_endDate"
                    android:layout_below="@+id/secondView_endDate"
                    android:layout_marginTop="5dp"
                    android:text="Optional Vaccinations: Bordatella"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp"
                    android:textColor="#787878"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/secondView"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/thirdView_startDate"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="22/08/2017 -"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/thirdView_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thirdView_startDate"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="03/10/2017"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="18dp"
                    android:text="DHPP (vaccines for distemper, adenovirus [hepatitis], parainfluenza, and parvovirus)"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/thirdView_endDate"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="5dp"
                    android:text="Optional Vaccinations: Coronavirus, Leptospirosis, Bordatella, Lyme disease"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp"
                    android:textColor="#787878"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fourthView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/thirdView"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/fourthView_startDate"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="22/08/2017 -"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fourthView_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fourthView_startDate"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="03/10/2017"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:text="Rabies"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    android:layout_alignTop="@+id/fourthView_startDate"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/fourthView_endDate"
                    android:layout_below="@+id/fourthView_endDate"
                    android:layout_marginTop="5dp"
                    android:text="Optional Vaccinations: None"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp"
                    android:textColor="#787878"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fifthView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fourthView"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/fifthView_startDate"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="22/08/2017 -"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fifthView_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fifthView_startDate"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="03/10/2017"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/fifthView_startDate"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="10dp"
                    android:text="DHPP"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/fifthView_endDate"
                    android:layout_below="@+id/fifthView_endDate"
                    android:layout_marginTop="5dp"
                    android:text="Optional Vaccinations: Coronavirus, Lyme disease, Leptospirosis"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp"
                    android:textColor="#787878"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sixthView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fifthView"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/sixthView_startDate"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="22/08/2017 -"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sixthView_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sixthView_startDate"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="03/10/2017"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/sixthView_startDate"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="10dp"
                    android:text="Rabies, DHPP"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/sixthView_endDate"
                    android:layout_below="@+id/sixthView_endDate"
                    android:layout_marginTop="5dp"
                    android:text="Optional Vaccinations: Coronavirus, Leptospirosis, Boradetella, Lyme disease"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp"
                    android:textColor="#787878"/>
            </RelativeLayout>




        </RelativeLayout>
    </ScrollView>

</RelativeLayout>